<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/exerciseNameRecyclerTextView"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:text="Stretch" />

    <TextView
        android:id="@+id/recyclerAddRepetitionTextView"
        android:layout_width="65dp"
        android:layout_height="match_parent"
        android:layout_weight=".9"
        tools:text="5" />

    <TextView
        android:id="@+id/recyclerAddInstructionsTextView"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_weight=".9"
        tools:text="On your toes and hands up" />

    <TextView
        android:id="@+id/recyclerAddNotesTextView"
        tools:text="warm up or cool down your body"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight=".8" />

</android.widget.LinearLayout>